#MSUB -j oe
##MSUB -V
##MSUB -m b
##MSUB -m $USER@lanl.gov

######################
# Tunable parameters #
######################

# Notes:
# ------
#
# nodes: Use a power of two to get better particle numbers.
#
# bbos_buddies: An additional number of nodes dedicated for burst buffer
# communication. Should be set to the same number of nodes as the burst buffer
# nodes.

# Node topology
cores_per_node=4
nodes=4
bbos_buddies=0

# DeltaFS config
ip_subnet="10.92"

###############
# Core script #
###############

logfile=""
source @CMAKE_INSTALL_PREFIX@/scripts/common.sh

get_jobdir
gen_hosts

cores=$((nodes * cores_per_node))
dpoints=2

bb_sst_size=$((2 * (2**20)))    # BBOS SST table size in bytes
bb_log_size=$((2 * (2**27))) # BBOS max per-core log size in bytes

parts=$cores
do_querying=0
last=0
while [ $dpoints -gt 0 ]
do
    if [ $dpoints -eq 1 ]; then
        last=1
    fi

    build_deck "file-per-process" $parts $parts
    do_run "baseline" $(((parts**2)*100)) $last

    build_deck "file-per-particle" $parts $parts
    do_run "deltafs" $(((parts**2)*100)) $last

    dpoints=$(( dpoints - 1 ))
    parts=$(( parts * 2 ))
done
